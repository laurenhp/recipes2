<div class="page-header">
  <h3>Like #<%= @like.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd>
        <% if @like.user.present? %>
          <a href="/users/<%= @like.user_id %>">
            <%= @like.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>Recipe</dt>
      <dd>
        <% if @like.recipe.present? %>
          <a href="/recipes/<%= @like.recipe_id %>">
            <%= @like.recipe.dish %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/likes" class="btn btn-primary">
        Back
      </a>
      <a href="/likes/<%= @like.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_like/<%= @like.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
